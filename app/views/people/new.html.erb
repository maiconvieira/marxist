<body class="app header-fixed sidebar-fixed">
  <%= render "shared/header" %>
  <div class="app-body">
    <%= render "shared/sidebar" %>
    <!-- Main content -->
    <main class="main">
      <%= render "shared/breadcrumb" %>
      <div class="container-fluid">
        <div class="animated fadeIn">
          <div class="row">
            <div class="col-lg-12">
              <div class="card">
                <%= render 'form', person: @person %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <div class="card">
              <%= link_to people_path, :class => 'btn btn-sm btn-success' do %>
                <%= fa_icon 'dot-circle-o', text: 'Voltar' %>
              <% end %>
            </div>
            <!--/.col-->
          </div>
          <!--/.row-->
        </div>
      </div>
      <!-- /.conainer-fluid -->
    </main>
  </div>
  <%= render "shared/footer" %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
</body>
