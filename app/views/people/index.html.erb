<body class="app header-fixed sidebar-fixed">
  <%= render "shared/header" %>
  <div class="app-body">
    <%= render "shared/sidebar" %>
    <!-- Main content -->
    <main class="main">
      <%= render "shared/breadcrumb" %>
      <div class="container-fluid">
        <div class="animated fadeIn">
          <div class="row">
            <div class="col-lg-12">
              <div class="card">
                <div class="card-header">
                  <%= fa_icon "align-justify", text: "Pessoas relaciondas a EM" %>
                </div>
                <div class="card-body">
                  <table class="table table-striped">
                    <thead>
                      <tr>
                        <th colspan="3"></th>
                        <th>Nome</th>
                        <th>E-mail</th>
                        <th>Telefone</th>
                        <th>Classificação</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @people.each do |person| %>
                        <tr>
                          <td class="people">
                            <%= link_to edit_person_path(person) do %>
                              <%= fa_icon 'pencil' %>
                            <% end %>
                          </td>
                          <td class="people">
                            <%= link_to person, method: :delete, data: { confirm: 'Are you sure?' } do %>
                              <%= fa_icon 'trash-o' %>
                            <% end %>
                          </td>
                          <td class="people">
                            <% if person.picture.present? %>
                              <%= image_tag person.picture, class: "img-avatar",  alt: person.name %>
                            <% else %>
                              <%= image_tag "foice-martelo.png", class: "img-avatar",  alt: person.name %>
                            <% end %>
                          </td>
                          <td class="people"><%= link_to person.name, person %></td>
                          <td class="people"><%= person.mail %></td>
                          <td class="people"><%= person.phone %></td>
                          <td class="people"><%= person.classification.classification %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                  <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#">Prev</a>
                    </li>
                    <li class="page-item active">
                      <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">4</a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">Next</a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            <!--/.col-->
        </div>
      </div>
      <!-- /.conainer-fluid -->
    </main>
    <% render "shared/aside" %>
  </div>
  <%= render "shared/footer" %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
</body>
