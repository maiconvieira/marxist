<div class="modal fade" id="myGoal" tabindex="-1" role="dialog" aria-labelledby="myGoalLabel" style="display: none;" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">
          <strong><%= fa_icon 'plus-circle', text: 'Adicionar Objetivos' %></strong>
        </h4>
      </div>
      <%= form_with(model:[@person, @person.goals.build]) do |form| %>
        <div class="modal-body">
          <div class="form-group row">
            <div class="col-md-12">
              <div class="row">
                <div class="col-md-4">
                  <%= form.label :quota, 'Cota Qtd', class: 'form-control-label' %>
                  <%= form.text_field :quota, id: :quota, class: 'form-control' %>
                </div>
                <div class="col-md-8">
                  <%= form.label :quota_value, 'Cota Valor', class: 'form-control-label' %>
                  <%= form.text_field :quota_value, id: :quota_value, class: 'form-control' %>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-12">
              <div class="row">
                <div class="col-md-4">
                  <%= form.label :journal, 'Jornal Qtd', class: 'form-control-label' %>
                  <%= form.text_field :journal, id: :journal, class: 'form-control' %>
                </div>
                <div class="col-md-4">
                  <%= form.label :journal_value, 'Valor Jornal', class: 'form-control-label' %>
                  <%= form.text_field :journal_value, id: :journal_value, class: 'form-control' %>
                </div>
                <div class="col-md-4">
                  <%= form.label :journal_sum, 'Soma', class: 'form-control-label' %>
                  <%= form.text_field :journal_sum, id: :journal_sum, class: 'form-control' %>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-12">
              <div class="row">
                <div class="col-md-4">
                  <%= form.label :first_campaign, '1ª CF Qtd', class: 'form-control-label' %>
                  <%= form.text_field :first_campaign, id: :first_campaign, class: 'form-control' %>
                </div>
                <div class="col-md-4">
                  <%= form.label :first_campaign_value, 'Valor Parcela', class: 'form-control-label' %>
                  <%= form.text_field :first_campaign_value, id: :first_campaign_value, class: 'form-control' %>
                </div>
                <div class="col-md-4">
                  <%= form.label :first_campaign_sum, 'Soma', class: 'form-control-label' %>
                  <%= form.text_field :first_campaign_sum, id: :first_campaign_sum, class: 'form-control' %>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-12">
              <div class="row">
                <div class="col-md-4">
                  <%= form.label :second_campaign, '2ª CF Qtd', class: 'form-control-label' %>
                  <%= form.text_field :second_campaign, id: :second_campaign, class: 'form-control' %>
                </div>
                <div class="col-md-4">
                  <%= form.label :second_campaign_value, 'Valor parcela', class: 'form-control-label' %>
                  <%= form.text_field :second_campaign_value, id: :second_campaign_value, class: 'form-control' %>
                </div>
                <div class="col-md-4">
                  <%= form.label :second_campaign_sum, 'Soma', class: 'form-control-label' %>
                  <%= form.text_field :second_campaign_sum, id: :second_campaign_sum, class: 'form-control' %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <%= form.submit :class => 'btn btn-sm btn-primary' %>
          <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Fechar</button>
        </div>
      </div>
      <!-- /.modal-content -->
      <% end %>
  </div>
  <!-- /.modal-dialog -->
</div>
