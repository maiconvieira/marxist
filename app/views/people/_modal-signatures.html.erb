<div class="modal fade" id="mySignature" tabindex="-1" role="dialog" aria-labelledby="mySignatureLabel" style="display: none;" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">
          <strong><%= fa_icon 'plus-circle', text: 'Adicionar Assinatura' %></strong>
        </h4>
      </div>
      <%= form_with(model:[@person, @person.signatures.build]) do |form| %>
        <div class="modal-body">
          <div class="form-group row">
            <div class="col-md-12">
              <%= form.label :signature_date, 'Data', class: 'form-control-label' %>
              <%= form.date_field :signature_date, id: :signature_date, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-12">
              <%= form.label :editions, 'Edições', class: 'form-control-label' %>
              <%= form.text_field :editions, id: :editions, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-12">
              <%= form.label :initial_edition, 'Inicio', class: 'form-control-label' %>
              <%= form.text_field :initial_edition, id: :initial_edition, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-12">
              <%= form.label :final_edition, 'Inicio', class: 'form-control-label' %>
              <%= form.text_field :final_edition, id: :final_edition, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <%= form.submit :class => 'btn btn-sm btn-primary' %>
          <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Fechar</button>
        </div>
      </div>
      <!-- /.modal-content -->
      <% end %>
  </div>
  <!-- /.modal-dialog -->
</div>
