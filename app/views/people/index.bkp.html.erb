<div class="page form-page">
  <%= render "shared/header" %>
  <div class="page-content d-flex align-items-stretch">
    <%= render "shared/side_navbar" %>
    <div class="content-inner">
      <!-- Page Header-->
      <header class="page-header">
        <div class="container-fluid">
          <h2 class="no-margin-bottom">Forms</h2>
        </div>
      </header>
      <%= render "shared/breadcrumb" %>
      <!-- Forms Section-->
      <section class="forms">
        <div class="container-fluid">
          <div class="row">
            <!-- Form Elements -->
            <div class="col-lg-12">
              <div class="card">
                <div class="card-header d-flex align-items-center justify-content-start">
                  <h3 class="h4">People in contact with Esquerda Marxista:</h3>
                  <%= link_to "#", :class => "btn btn-primary btn-sm ml-auto p-2 open-form" do %>
                    <i class="fa fa-plus-square" aria-hidden="true"></i> ADD
                  <% end %>
                </div>
                <div class="closed-form">
                  <%= render "form" %>
                </div>
                <div class="card-body">
                  <table class="table table-striped table-sm">
                    <thead>
                      <tr>
                        <th colspan="2"></th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Situation</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <th scope="row">1</th>
                        <th><%= image_tag "avatar-1.jpg", alt: "...", class: "img-fluid rounded-circle image" %></th>
                        <td>Maicon Rodrigo Vieira</td>
                        <td>(47)99723-6910</td>
                        <td>maiconrodrigo.vieira@gmail.com</td>
                        <td>Militante</td>
                      </tr>
                      <tr>
                        <th scope="row">2</th>
                        <th><%= image_tag "avatar-2.jpg", alt: "...", class: "img-fluid rounded-circle image" %></th>
                        <td>Mark Otto</td>
                        <td>(47)99999-9999</td>
                        <td>email@provider.com</td>
                        <td>Contribuinte</td>
                      </tr>
                      <tr>
                        <th scope="row">3</th>
                        <th><%= image_tag "avatar-3.jpg", alt: "...", class: "img-fluid rounded-circle image" %></th>
                        <td>Mark Otto</td>
                        <td>(47)99999-9999</td>
                        <td>email@provider.com</td>
                        <td>Contact</td>
                      </tr>
                      <tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <%= render "shared/footer" %>
    </div>
  </div>
</div>
